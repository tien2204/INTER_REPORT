# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
SERVER_HOST=172.26.33.210
SERVER_PORT=8000

# Data Directories
DATA_DIR=/var/voice_agent/data

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/voice_agent/logs/voice_agent.log

# Document Processing
MAX_DOCUMENT_SIZE=10000000  # 10MB
MAX_CHUNK_SIZE=1000

# Voice Processing
TTS_VOICE_ID=vi

# History Management
MAX_HISTORY_SIZE=100

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Document Embeddings
CHROMA_PERSIST_DIRECTORY=/var/voice_agent/data/embeddings
CHROMA_COLLECTION_NAME=voice_agent_collection

# Image Processing
OCR_LANGUAGE=vi

# GraphRAG Configuration
GRAPH_SIMILARITY_THRESHOLD=0.3
MAX_RELATED_DOCS=5
