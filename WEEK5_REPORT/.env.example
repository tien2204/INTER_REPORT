CHUNK_OVERLAP=512           # Kích thước overlap giữa các chunk
TTS_VOICE_ID=vi

# History Management
MAX_HISTORY_SIZE=100

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Document Embeddings
CHROMA_PERSIST_DIRECTORY=./data/embeddings
CHROMA_COLLECTION_NAME=voice_agent_collection

# Image Processing
OCR_LANGUAGE=vi

# GraphRAG Configuration
GRAPH_SIMILARITY_THRESHOLD=0.3
MAX_RELATED_DOCS=5
