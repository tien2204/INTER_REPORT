# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
SERVER_HOST=172.26.33.210
SERVER_PORT=8000

# Data Directories
DATA_DIR=./data

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/voice_agent.log

# Document Processing
MAX_DOCUMENT_SIZE=10000000  # 10MB
MAX_CHUNK_SIZE=1000

# Voice Processing
SAMPLE_RATE=16000           # Mẫu/giây cho xử lý âm thanh
