# ===========================================
# Multi AI Agent Banner Generator Configuration
# ===========================================

# Environment
ENVIRONMENT=development
DEBUG=true

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=sqlite:///./banner_generator.db
# For PostgreSQL production:
# DATABASE_URL=postgresql://username:password@localhost:5432/banner_ai_db

# Database Pool Settings
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ===========================================
# Redis Configuration  
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5

# ===========================================
# AI Model APIs
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORGANIZATION=your_openai_org_id_here

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# FLUX Text-to-Image Configuration
FLUX_API_URL=http://localhost:8080/generate
FLUX_API_KEY=your_flux_api_key_here
FLUX_MODEL=flux-1-schnell

# ===========================================
# External Services
# ===========================================

# Figma Integration
FIGMA_ACCESS_TOKEN=your_figma_token_here

# Image Storage (Optional)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# ===========================================
# Security Configuration
# ===========================================
SECRET_KEY=your_secret_key_here_minimum_32_characters
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_ALGORITHM=HS256

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# Application Settings
# ===========================================
HOST=0.0.0.0
PORT=8000
MAX_WORKERS=4

# ===========================================
# File Processing
# ===========================================
UPLOAD_DIR=uploads
TEMP_DIR=temp
OUTPUT_DIR=output
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=png,jpg,jpeg,svg,pdf,webp

# ===========================================
# Agent Configuration
# ===========================================
MAX_ITERATIONS=5
TIMEOUT_SECONDS=300
RETRY_ATTEMPTS=3
MAX_CONCURRENT_WORKFLOWS=10

# Workflow Settings
WORKFLOW_TIMEOUT=600
WORKFLOW_RETRY_DELAY=5

# Agent Heartbeat
HEARTBEAT_INTERVAL=30
AGENT_TIMEOUT=60

# ===========================================
# Communication System
# ===========================================

# Message Queue Settings
MESSAGE_QUEUE_MAX_SIZE=1000
MESSAGE_RETRY_ATTEMPTS=3
MESSAGE_TIMEOUT=30

# Event Dispatcher Settings  
EVENT_HISTORY_SIZE=1000
MAX_CONCURRENT_EVENTS=100
EVENT_TIMEOUT=30

# WebSocket Settings
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=10

# ===========================================
# Monitoring & Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/banner_ai.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Health Check Settings
HEALTH_CHECK_INTERVAL=30
METRICS_COLLECTION_INTERVAL=60

# Monitoring Ports
PROMETHEUS_PORT=8090
GRAFANA_PORT=3001

# ===========================================
# Performance Tuning
# ===========================================

# Memory Management
MAX_MEMORY_USAGE=0.8
MEMORY_CLEANUP_INTERVAL=300

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_ENABLE_DEV_TOOLS=true

# ===========================================
# Development Tools
# ===========================================

# Auto-reload settings
WATCHFILES_ENABLED=true
RELOAD_DIRS=agents,api,communication,database

# Debug Settings
ENABLE_DEBUG_TOOLBAR=true
SQLALCHEMY_ECHO=false

# Testing
TEST_DATABASE_URL=sqlite:///./test_banner_generator.db
PYTEST_TIMEOUT=300
